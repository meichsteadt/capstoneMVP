<% content_for(:admin_menu) do %>
  <% render 'form' %>
<% end %>
<div class="container">
  <div class="row">
    <div class="box promo brands">
      <div class="col-lg-12">
        <hr>
        <h2 class="intro-text text-center">Our <strong>Brands</strong></h2>
        <hr>
      </div>
      <% @brands.each do |brand| %>
        <div class="col-md-4 col-sm-6 col-xs-8 col-xs-offset-2 col-sm-offset-0 text-center">
            <%= link_to(brand.url, target: '_blank') do %><img class="img img-responsive shadow" src="<%= brand.image(:medium) %>" alt=""><% end %>
        </div>
      <% end %>
      <div class="clearfix"></div>
    </div>
  </div>
</div>
