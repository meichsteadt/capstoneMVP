<div class="container">
  <div class="row">
    <div class="box promo">
      <div class="col-lg-12">
        <hr>
        <h2 class="intro-text text-center">Our <strong>Brands</strong></h2>
        <hr>
      </div>
      <% @brands.each do |brand| %>
        <div class="col-md-4 text-center">
            <%= link_to(brand_path(brand)) do %><img class="img img-responsive shadow" src="<%= brand.image %>" alt=""><% end %>
        </div>
      <% end %>
      <div class="clearfix"></div>
    </div>
  </div>
</div>
