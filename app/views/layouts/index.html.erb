<div class="container">
  <div class="row">
    <div class="box">
      <div class="col-lg-12 text-center">
        <div id="carousel-example-generic" class="carousel slide">
          <!-- Indicators -->
          <ol class="carousel-indicators hidden-xs">
            <% @slideshow.products.each_with_index do |product, index| %>
              <li data-target="#carousel-example-generic" data-slide-to="<%= index %>" <% if index == 0 %> class="active" <% end %>></li>
            <% end %>
          </ol>
          <!-- Wrapper for slides -->
          <div class="carousel-inner">
            <% @slideshow.products.each_with_index do |product, index| %>
              <% if index == 0 %>
                <div class="item active">
                    <img class="img-responsive img-full" src="<%= product.image %>" alt="">
                </div>
              <% else %>
                <div class="item">
                    <img class="img-responsive img-full" src="<%= product.image %>" alt="">
                </div>
              <%end %>
            <% end %>
          </div>
          <!-- Controls -->
          <a class="left carousel-control" href="#carousel-example-generic" data-slide="prev">
              <span class="icon-prev"></span>
          </a>
          <a class="right carousel-control" href="#carousel-example-generic" data-slide="next">
              <span class="icon-next"></span>
          </a>
        </div>
        <h2 class="brand-before">
            <small>Welcome to</small>
        </h2>
        <h1 class="brand-name"><%= @store.name %></h1>
        <hr class="tagline-divider">
      </div>
    </div>
  </div>
  <div class="row" >
   <div class="box">
     <div class="col-lg-12">
       <hr>
       <h2 class="intro-text text-center">About
           <strong><%= @store.name %></strong>
       </h2>
       <hr>
     </div>
     <div class="col-md-6">
       <img class="img-responsive img-border-left shadow img-full" src="<%= @layout.store_image %>" alt="<%= @store.name %> Logo" >
     </div>
     <div class="col-md-6">
       <p><%= @layout.store_copy %></p>
     </div>
     <div class="clearfix"></div>
   </div>
  </div>
</div>

<!-- Script to Activate the Carousel -->
<script>
$('.carousel').carousel({
    interval: 000 //changes the speed
})
</script>
